			<Output TaskParameter="Revision" PropertyName="ArgoptRevision" />
		</SvnVersion>
	</Target>
  
	<Target Name="GenerateAssemblyInfo" DependsOnTargets="SetRevision">    
		<AssemblyInfo CodeLanguage="CS"  
