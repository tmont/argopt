			AssemblyVersion="$(ArgoptVersion).$(ArgoptRevision)" 
			AssemblyFileVersion="$(ArgoptVersion).$(ArgoptRevision)" />
	</Target>
	
	<Target Name="CreateZipArchive" Condition="$(GenerateArchive) != ''">
		<PropertyGroup>
			<DistDir>$(OutputPath)\..\dist</DistDir>
		</PropertyGroup>
		
		<MakeDir Directories="$(DistDir)" Condition="!Exists($(DistDir))"/>
		
		<ItemGroup>
			<SourceFiles 
				Include="..\..\**\*.*" 
				Exclude="..\..\**\bin\**;..\..\**\obj\**;..\..\**\.svn\**;..\..\**\*.zip;..\..\**\*.user;..\..\**\*.suo" 
			/>
			
			<BinFiles Include="$(OutputPath)\**\*.*" />
		</ItemGroup>
		
		<Zip Files="@(SourceFiles)" ZipFileName="$(DistDir)\Argopt-src-$(ArgoptVersion).$(ArgoptRevision).zip" WorkingDirectory="..\..\" />
		<Zip Files="@(BinFiles)" ZipFileName="$(DistDir)\Argopt-$(ArgoptVersion).$(ArgoptRevision).zip" WorkingDirectory="$(OutputPath)\" />
	</Target>
  
	<Target Name="BeforeBuild">
		<CallTarget Targets="GenerateAssemblyInfo" />
	</Target>
	
	<Target Name="AfterBuild">
		<Copy SourceFiles="..\..\CHANGELOG;..\..\README;..\..\COPYING" DestinationFolder="$(OutputPath)" />
		<CallTarget Targets="CreateZipArchive" />
	</Target>
  
